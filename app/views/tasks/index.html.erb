
<h1>Task List</h1>
<%= form_for Task.new do |f| %>
    <%= f.label :task %>
    <%= f.text_field :task %>
    <%= f.submit %>
<% end %>
<div class="container-fluid">
    <ul class="list-group">
        <% for task in @tasks %>
            <li class="list-group-item"><%= task.task %></li>
        <% end %>
    </ul>
</div>

